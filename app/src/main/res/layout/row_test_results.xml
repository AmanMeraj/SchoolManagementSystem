<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="2dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linear_row"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_date"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text=""
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_id"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text=""
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_s_name"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text=""
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_class"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text=""
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_subject"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text=""
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_total_marks"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text=""
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_obtained"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text=""
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>