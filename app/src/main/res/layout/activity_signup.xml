<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".Signup.ActivitySignup">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/logo_sm"
                android:id="@+id/logo"
                android:layout_marginVertical="20dp"
                android:layout_width="120dp"
                android:layout_centerHorizontal="true"
                android:layout_height="120dp"/>
            <TextView
                android:id="@+id/tv_register_text"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/logo"
                android:text="Register your Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginVertical="20dp"
                android:layout_below="@+id/tv_register_text"
                android:orientation="vertical"
                android:id="@+id/linear_text_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textField_first_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/white"
                    app:boxBackgroundColor="@color/white"
                    android:textColorHint="@color/black"
                    app:startIconDrawable="@drawable/usersm"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="25dp"
                    android:hint="User Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_first_name"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:maxLength="40"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textField_password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/locksm"
                    app:boxStrokeColor="@color/white"
                    app:boxBackgroundColor="@color/white"
                    android:textColorHint="@color/black"
                    app:endIconMode="password_toggle"
                    android:layout_marginHorizontal="25dp"
                    android:hint="Password">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_password"
                        android:fontFamily="@font/plus_jakarta_sans_medium"
                        android:layout_width="match_parent"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:maxLength="40"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginVertical="10dp"
                    android:id="@+id/textField_confirm_password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/locksm"
                    app:boxStrokeColor="@color/white"
                    app:boxBackgroundColor="@color/white"
                    android:textColorHint="@color/black"
                    app:endIconMode="password_toggle"
                    android:layout_marginHorizontal="25dp"
                    android:hint="Confirm Password">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_confirm_password"
                        android:fontFamily="@font/plus_jakarta_sans_medium"
                        android:layout_width="match_parent"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:maxLength="40"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
                <RelativeLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:layout_width="wrap_content"
                        android:id="@+id/material_stitch"
                        android:shadowColor="@color/black"
                        android:text="Accept Our"
                        android:textColor="@color/white"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:outlineSpotShadowColor="@color/black"
                        android:layout_marginVertical="20dp"
                        android:layout_height="40dp"
                        android:layoutDirection="rtl"/>
                    <TextView
                        android:layout_marginHorizontal="5dp"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:layout_toEndOf="@+id/material_stitch"
                        android:textSize="15sp"
                        android:textColor="#00A4BD"
                        android:text="@string/term_s_conditions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:text="Signup"
                    android:background="@drawable/blue_curve_btn"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_height="wrap_content">

                </androidx.appcompat.widget.AppCompatButton>
                <TextView
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:layout_marginVertical="25dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="Have an account ? login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>