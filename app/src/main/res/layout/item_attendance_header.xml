<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#11787878"
    android:orientation="horizontal"

    android:padding="4dp">

    <TextView android:text="STUDENT NAME" style="@style/AttendanceHeader"/>
    <TextView android:text="STUDENT NO" style="@style/AttendanceHeader"/>
    <TextView android:text="P" style="@style/AttendanceHeader"/>
    <TextView android:text="L" style="@style/AttendanceHeader"/>
    <TextView android:text="A" style="@style/AttendanceHeader"/>
    <TextView android:text="H" style="@style/AttendanceHeader"/>
    <TextView android:text="F" style="@style/AttendanceHeader"/>
    <TextView android:text="%" style="@style/AttendanceHeader"/>

    <!-- Dynamic Days Header (1-30 + weekday e.g. MON) -->
    <!-- You should dynamically inflate and add this in code -->
    <!-- Example shown for 2 days -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutDaysHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"/>

    </LinearLayout>
</LinearLayout>
