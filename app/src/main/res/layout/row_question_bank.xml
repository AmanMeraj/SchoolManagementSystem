<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginVertical="2dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linear_row"

android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_date"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_day"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="Example Title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_id"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="Class A"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_student"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="Sample Question"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_type"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="Type A"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>