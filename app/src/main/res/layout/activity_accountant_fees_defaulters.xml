<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Accountant.FeeInvoice.ActivityAccountantFeesDefaulters">
    <include layout="@layout/back_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_intro"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/general_settings"
                        android:layout_width="wrap_content"
                        android:text="Fees"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:textSize="15sp"
                        android:paddingHorizontal="10dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/view"
                        android:background="@drawable/button_bg_sm"
                        android:layout_marginVertical="10dp"
                        android:layout_toEndOf="@+id/general_settings"
                        android:layout_width="1dp"
                        android:layout_height="30dp">

                    </View>
                    <ImageView
                        android:id="@+id/institute_profile_img"
                        android:padding="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toEndOf="@+id/view"
                        android:layout_centerVertical="true"
                        android:src="@drawable/institute_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp">

                    </ImageView>
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/institute_profile_img"
                        android:layout_width="wrap_content"
                        android:text="- Fees Paid Receipt "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:id="@+id/linear_btn"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:layout_below="@+id/card_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"> <!-- Increase padding to make room for floating label -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <!-- EditText Field -->
                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/edt_fee_month"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/edit_text_bg"
                            android:drawableEnd="@drawable/calendar2"
                            android:editable="false"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:hint=" DD/MM"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:paddingTop="12dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </RelativeLayout>


                    <!-- Floating Hint Label -->
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/edittext_bg"
                        android:elevation="5dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="2dp"
                        android:text="Fees Month*"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:background="@drawable/blue_border_bg"
                        android:id="@+id/balance_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img_print"
                            android:padding="7dp"
                            android:src="@drawable/input"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:tint="@color/light_blue" />
                        <TextView
                            android:layout_marginEnd="20dp"
                            android:layout_toEndOf="@+id/img_print"
                            android:layout_centerVertical="true"
                            android:textColor="@color/light_blue"
                            android:fontFamily="@font/plus_jakarta_sans_bold"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:text="Carry Forward Balance"
                            android:layout_height="wrap_content"/>


                    </RelativeLayout>
                    <ImageView
                        android:layout_marginHorizontal="10dp"
                        android:layout_toEndOf="@+id/balance_btn"
                        android:id="@+id/img_select"
                        android:padding="5dp"
                        android:src="@drawable/input2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="@color/light_blue" />
                    <ImageView
                        android:layout_toEndOf="@+id/img_select"
                        android:id="@+id/img_notification"
                        android:padding="5dp"
                        android:src="@drawable/notification_sm"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="@color/orange" />
                </RelativeLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:layout_below="@+id/linear_btn"
                android:layout_marginHorizontal="10dp"
                app:spanCount="2"
                android:layout_marginVertical="20dp"
                android:id="@+id/rc_defaulters"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>