<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword.ActivityForgotPassword">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/logo"
                android:src="@drawable/logo_sm"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="130dp"
                android:layout_height="120dp">

            </ImageView>
            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/text"
                android:text="I do not have an account yet!"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:background="@drawable/white_teansparent_bg"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:layout_marginVertical="20dp"
                android:layout_below="@+id/text"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="Create a new Account "
                android:id="@+id/new_account_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField_first_name"
                android:layout_below="@+id/new_account_btn"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/white"
                app:boxBackgroundColor="@color/white"
                android:textColorHint="@color/black"
                app:startIconDrawable="@drawable/usersm"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="25dp"
                android:hint="User Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_first_name"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:maxLength="40"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginHorizontal="20dp"
                android:text="Reset Password"
                android:textColor="#FF7459"
                android:id="@+id/reset_pass_btn"
                android:layout_marginVertical="40dp"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:textSize="15sp"
                android:layout_below="@+id/textField_first_name"
                android:layout_width="match_parent"
                android:background="@drawable/btn_reset_bg"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/reset_pass_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/back_img"
                    android:src="@drawable/backsm"
                    android:padding="6dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:paddingHorizontal="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:layout_toEndOf="@+id/back_img"
                    android:layout_centerVertical="true"
                    android:id="@+id/back_to_signin_btn"
                    android:text="Back to sign In"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>