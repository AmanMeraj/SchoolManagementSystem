<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginVertical="2dp"
    android:layout_marginHorizontal="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_row"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="11sp"
            android:id="@+id/tv_row_sr"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_title"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="Quiz 1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_class"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="Class 10"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_subject"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="Physics"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_exam_date"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="15/04/2025"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="5dp"
            android:textSize="11sp"
            android:id="@+id/tv_row_duration"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="2 Hours"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>