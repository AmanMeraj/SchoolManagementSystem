<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Admin.Students.Managelogin.ActivityManageStudentsLogin">
    <include layout="@layout/back_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/toolbar"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_intro"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/general_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:textSize="15sp"
                        android:paddingHorizontal="10dp"
                        android:layout_centerVertical="true"/>

                    <View
                        android:layout_centerVertical="true"
                        android:id="@+id/view"
                        android:background="@drawable/button_bg_sm"
                        android:layout_marginVertical="10dp"
                        android:layout_toEndOf="@+id/general_settings"
                        android:layout_width="1dp"
                        android:layout_height="30dp"/>

                    <ImageView
                        android:id="@+id/institute_profile_img"
                        android:padding="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toEndOf="@+id/view"
                        android:layout_centerVertical="true"
                        android:src="@drawable/institute_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/institute_profile_img"
                        android:layout_width="wrap_content"
                        android:text="- Employee Login"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/search_card"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@+id/card_intro"
                android:layout_marginVertical="10dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Search"
                        android:id="@+id/tv_search"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:layout_below="@+id/tv_search"
                        android:id="@+id/rel_search"
                        android:layout_width="match_parent"
                        android:orientation="vertical"

                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"> <!-- Increase padding to make room for floating label -->

                            <RelativeLayout

                                android:layout_marginTop="10dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <!-- EditText Field -->
                                <EditText
                                    android:maxLines="1"
                                    android:id="@+id/edt_search_employee"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/edit_text_bg"
                                    android:paddingStart="10dp"
                                    android:paddingTop="12dp"
                                    android:paddingBottom="10dp"
                                    android:paddingEnd="10dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/plus_jakarta_sans"
                                    android:textSize="14sp"
                                    android:hint="Search Employee"
                                    android:inputType="text"/>
                            </RelativeLayout>


                            <!-- Floating Hint Label -->
                            <TextView
                                android:elevation="5dp"
                                android:id="@+id/tv_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Search Employee*"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:background="@drawable/edittext_bg"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="25dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"> <!-- Increase padding to make room for floating label -->

                            <RelativeLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <!-- EditText Field -->
                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                    android:drawableEnd="@drawable/down_arrow"
                                    android:maxLines="1"
                                    android:editable="false"
                                    android:id="@+id/edt_select_role"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/edit_text_bg"
                                    android:paddingStart="10dp"
                                    android:paddingTop="12dp"
                                    android:paddingBottom="10dp"
                                    android:paddingEnd="10dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/plus_jakarta_sans"
                                    android:textSize="14sp"
                                    android:maxLength="11"
                                    android:hint="Select Role" />
                            </RelativeLayout>


                            <!-- Floating Hint Label -->
                            <TextView

                                android:elevation="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Role*"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:background="@drawable/edittext_bg"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="25dp" />
                        </RelativeLayout>

                    </LinearLayout>
                    <TextView
                        android:textSize="13sp"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:text="or, Reload All"
                        android:id="@+id/tv_reload_all"
                        android:textColor="@color/grey"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/rel_search"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_below="@+id/search_card"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginVertical="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/flexbox_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="10dp"
                        app:flexWrap="wrap"
                        app:alignItems="center">

                        <TextView
                            android:id="@+id/tv_copy"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/text_view_bg"
                            android:layout_marginVertical="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:text="Copy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_csv"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/text_view_bg"
                            android:layout_marginVertical="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:text="CSV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_excel"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/text_view_bg"
                            android:layout_marginVertical="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:text="Excel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_pdf"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/text_view_bg"
                            android:layout_marginVertical="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:text="PDF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_print"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/text_view_bg"
                            android:layout_marginVertical="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:text="Print"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_column_visibility"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/text_view_bg"
                            android:layout_marginVertical="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:text="Column Visibility"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"/>

                    </com.google.android.flexbox.FlexboxLayout>
                    <RelativeLayout
                        android:id="@+id/search_relative"
                        android:background="@drawable/bg_gradient_border"
                        android:layout_marginHorizontal="10dp"
                        android:layout_below="@+id/flexbox_buttons"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginHorizontal="10dp"
                            android:layout_alignTop="@+id/edt_search"
                            android:layout_alignBottom="@+id/edt_search"
                            android:id="@+id/image_search"
                            android:padding="5dp"
                            android:layout_width="30dp"
                            android:src="@drawable/search"
                            android:layout_height="30dp"/>
                        <EditText
                            android:textColor="@color/black"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:hint="Search"
                            android:textColorHint="@color/black"
                            android:textSize="13sp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginVertical="3dp"
                            android:background="@color/white"
                            android:id="@+id/edt_search"
                            android:layout_toEndOf="@+id/image_search"
                            android:layout_width="220dp"
                            android:layout_height="35dp"/>
                    </RelativeLayout>


                    <HorizontalScrollView
                        android:id="@+id/horizontal_scroll_view"
                        android:layout_below="@+id/search_relative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <!-- Header Row -->
                            <LinearLayout

                                android:id="@+id/linear_heading"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:background="@drawable/button_bg_sm">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:paddingVertical="5dp"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                    android:text="ID" />

                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:paddingVertical="5dp"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                    android:text="S Name" />

                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:paddingVertical="5dp"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                    android:text="Role" />

                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:paddingVertical="5dp"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                    android:text="User ID" />

                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:paddingVertical="5dp"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                    android:text="Password" />

                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:paddingVertical="5dp"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                    android:text="Action" />
                            </LinearLayout>

                            <!-- RecyclerView -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rc_promote_student"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_marginHorizontal="10dp"
                                android:orientation="vertical"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                        </LinearLayout>
                    </HorizontalScrollView>


                    <TextView
                        android:layout_alignTop="@+id/linear_btn"
                        android:layout_alignBottom="@+id/linear_btn"
                        android:gravity="center"
                        android:id="@+id/page_tv"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:textSize="11sp"
                        android:layout_below="@id/horizontal_scroll_view"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="wrap_content"
                        android:text="Showing page 1 of 4"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:id="@+id/linear_btn"
                        android:layout_marginBottom="20dp"
                        android:layout_below="@+id/horizontal_scroll_view"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:padding="5dp"
                            android:id="@+id/prev_button"
                            android:src="@drawable/prev_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                        <ImageView
                            android:layout_marginHorizontal="10dp"
                            android:rotation="180"
                            android:padding="5dp"
                            android:id="@+id/next_button"
                            android:src="@drawable/prev_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>
    </ScrollView>

    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:id="@+id/loader"
        android:layout_height="match_parent"/>
</RelativeLayout>