<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Admin.Homework.homeworks.ActivityHomeworks">

    <include layout="@layout/back_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_intro"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/general_settings"
                        android:layout_width="wrap_content"
                        android:text="Question Paper"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:textSize="12sp"
                        android:paddingHorizontal="10dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/view"
                        android:background="@drawable/button_bg_sm"
                        android:layout_marginVertical="10dp"
                        android:layout_toEndOf="@+id/general_settings"
                        android:layout_width="1dp"
                        android:layout_height="30dp">

                    </View>
                    <ImageView
                        android:id="@+id/institute_profile_img"
                        android:padding="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toEndOf="@+id/view"
                        android:layout_centerVertical="true"
                        android:src="@drawable/institute_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp">

                    </ImageView>
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/institute_profile_img"
                        android:layout_width="wrap_content"
                        android:text="- Create Question Paper "
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@+id/card_intro"
                android:layout_margin="8dp"
                android:id="@+id/card_create_question_paper"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:fontFamily="@font/plus_jakarta_sans_extrabold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Question Paper"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <!-- Exam Type Field -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exam Type*"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:background="@drawable/edittext_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="2dp"
                            android:elevation="5dp"
                            android:layout_marginStart="15dp"/>

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/edt_exam_type_paper"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_bg"
                            android:drawableEnd="@drawable/down_arrow"
                            android:editable="false"
                            android:hint="Select"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/plus_jakarta_sans"/>
                    </RelativeLayout>

                    <!-- Classes Field -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Classes*"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:background="@drawable/edittext_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="2dp"
                            android:elevation="5dp"
                            android:layout_marginStart="15dp"/>

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/edt_classes_paper"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_bg"
                            android:drawableEnd="@drawable/down_arrow"
                            android:editable="false"
                            android:hint="All Classes"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/plus_jakarta_sans"/>
                    </RelativeLayout>

                    <!-- Subject Field -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject*"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:background="@drawable/edittext_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="2dp"
                            android:elevation="5dp"
                            android:layout_marginStart="15dp"/>

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/edt_subject_paper"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_bg"
                            android:drawableEnd="@drawable/down_arrow"
                            android:editable="false"
                            android:hint="All Subject"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/plus_jakarta_sans"/>
                    </RelativeLayout>

                    <!-- Date Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Start Date Field -->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date*"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:background="@drawable/edittext_bg"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="2dp"
                                android:elevation="5dp"
                                android:layout_marginStart="15dp"/>

                            <EditText
                                android:id="@+id/edt_date"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_text_bg"
                                android:drawableEnd="@drawable/calendar2"
                                android:editable="false"
                                android:hint="dd/mm/yyyy"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/plus_jakarta_sans"/>
                        </RelativeLayout>

                        <!-- End Date Field -->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="End Date*"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:background="@drawable/edittext_bg"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="2dp"
                                android:elevation="5dp"
                                android:layout_marginStart="15dp"/>

                            <EditText
                                android:id="@+id/edt_end_date"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_text_bg"
                                android:drawableEnd="@drawable/calendar2"
                                android:editable="false"
                                android:hint="dd/mm/yyyy"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/plus_jakarta_sans"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <!-- Time Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Start Time Field -->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start Time*"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:background="@drawable/edittext_bg"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="2dp"
                                android:elevation="5dp"
                                android:layout_marginStart="15dp"/>

                            <EditText
                                android:id="@+id/edt_start_time"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_text_bg"
                                android:drawableEnd="@drawable/timer"
                                android:editable="false"
                                android:hint="06:00 PM"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/plus_jakarta_sans"/>
                        </RelativeLayout>

                        <!-- End Time Field -->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="End Time*"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:background="@drawable/edittext_bg"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="2dp"
                                android:elevation="5dp"
                                android:layout_marginStart="15dp"/>

                            <EditText
                                android:id="@+id/edt_end_time"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_text_bg"
                                android:drawableEnd="@drawable/timer"
                                android:editable="false"
                                android:hint="06:00 PM"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/plus_jakarta_sans"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <!-- Minimum Percentage Field -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minimum Percentage*"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:background="@drawable/edittext_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="2dp"
                            android:elevation="5dp"
                            android:layout_marginStart="15dp"/>

                        <EditText
                            android:id="@+id/edt_minimum_percentage"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_bg"
                            android:hint="Minimum Percentage"
                            android:inputType="number"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/plus_jakarta_sans"/>
                    </RelativeLayout>

                    <!-- Instruction Field -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Instruction*"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:background="@drawable/edittext_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="2dp"
                            android:elevation="5dp"
                            android:layout_marginStart="15dp"/>

                        <EditText
                            android:id="@+id/edt_instruction"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edit_text_bg"
                            android:hint="Instruction"
                            android:inputType="textMultiLine"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="top"
                            android:fontFamily="@font/plus_jakarta_sans"/>
                    </RelativeLayout>

                    <!-- Auto Mark Register Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_auto_mark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auto Mark Register(Only For Multiple)"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Create Button -->
                    <RelativeLayout
                        android:id="@+id/btn_create_paper"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/blue_bg"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/create_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/add_sm"
                            app:tint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/create_icon"
                            android:layout_alignTop="@+id/create_icon"
                            android:layout_alignBottom="@+id/create_icon"
                            android:text="Create"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:fontFamily="@font/plus_jakarta_sans_extrabold"
                            android:gravity="center"
                            android:paddingStart="8dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/card_table"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="5dp"
                android:layout_below="@+id/card_create_question_paper"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/flexbox_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="20dp"
                        android:layout_marginHorizontal="10dp"
                        app:flexWrap="wrap"
                        app:alignItems="center">

                        <TextView
                            android:id="@+id/tv_copy"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/text_view_bg"
                            android:layout_marginVertical="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:text="Copy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_csv"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/text_view_bg"
                            android:layout_marginVertical="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:text="CSV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_excel"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/text_view_bg"
                            android:layout_marginVertical="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:text="Excel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_pdf"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/text_view_bg"
                            android:layout_marginVertical="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:text="PDF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_print"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/text_view_bg"
                            android:layout_marginVertical="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="10dp"
                            android:text="Print"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </com.google.android.flexbox.FlexboxLayout>

                    <RelativeLayout
                        android:id="@+id/search_relative"
                        android:background="@drawable/bg_gradient_border"
                        android:layout_marginHorizontal="10dp"
                        android:layout_below="@+id/flexbox_buttons"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginHorizontal="10dp"
                            android:layout_alignTop="@+id/edt_search"
                            android:layout_alignBottom="@+id/edt_search"
                            android:id="@+id/image_search"
                            android:padding="5dp"
                            android:layout_width="30dp"
                            android:src="@drawable/search"
                            android:layout_height="30dp"/>
                        <EditText
                            android:textColor="@color/black"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:hint="Search"
                            android:textColorHint="@color/black"
                            android:textSize="13sp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginVertical="3dp"
                            android:background="@color/white"
                            android:id="@+id/edt_search"
                            android:layout_toEndOf="@+id/image_search"
                            android:layout_width="220dp"
                            android:layout_height="35dp"/>
                    </RelativeLayout>

                    <HorizontalScrollView
                        android:id="@+id/tv_head"
                        android:scrollbars="none"
                        android:layout_marginVertical="10dp"
                        android:layout_below="@id/search_relative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/linear_head"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/button_bg_sm"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_marginHorizontal="5dp"
                                    android:textSize="11sp"
                                    android:id="@+id/tv_sr"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                    android:gravity="center"
                                    android:paddingVertical="5dp"
                                    android:text="Sr"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_marginHorizontal="5dp"
                                    android:textSize="11sp"
                                    android:id="@+id/tv_title"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                    android:gravity="center"
                                    android:paddingVertical="5dp"
                                    android:text="Title"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content">

                                </TextView>
                                <TextView
                                    android:layout_marginHorizontal="5dp"
                                    android:textSize="11sp"
                                    android:id="@+id/tv_class"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                    android:gravity="center"
                                    android:paddingVertical="5dp"
                                    android:text="Class"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content">

                                </TextView>

                                <TextView
                                    android:layout_marginHorizontal="5dp"
                                    android:textSize="11sp"
                                    android:id="@+id/tv_subject"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                    android:gravity="center"
                                    android:paddingVertical="5dp"
                                    android:text="Subject"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content">

                                </TextView>

                                <TextView
                                    android:layout_marginHorizontal="5dp"
                                    android:textSize="11sp"
                                    android:id="@+id/tv_exam_date"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                    android:gravity="center"
                                    android:paddingVertical="5dp"
                                    android:text="Exam Date"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:layout_marginHorizontal="5dp"
                                    android:textSize="11sp"
                                    android:id="@+id/tv_duration"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                    android:gravity="center"
                                    android:paddingVertical="5dp"
                                    android:text="Duration"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content">

                                </TextView>



                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginVertical="10dp"
                                android:layout_below="@+id/linear_head"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.recyclerview.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:id="@+id/rc_row_attendance_report"
                                    android:layout_below="@+id/tv_head"
                                    android:layout_marginHorizontal="10dp"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="20dp"
                                    android:layout_height="160dp">
                                </androidx.recyclerview.widget.RecyclerView>
                            </LinearLayout>
                        </RelativeLayout>



                    </HorizontalScrollView>

                    <TextView
                        android:layout_alignTop="@+id/linear_btn"
                        android:layout_alignBottom="@+id/linear_btn"
                        android:gravity="center"
                        android:id="@+id/page_tv"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:textSize="11sp"
                        android:layout_below="@id/tv_head"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="wrap_content"
                        android:text="Showing page 1 of 4"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:id="@+id/linear_btn"
                        android:layout_marginBottom="20dp"
                        android:layout_below="@+id/tv_head"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:padding="5dp"
                            android:id="@+id/prev_button"
                            android:src="@drawable/prev_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                        <ImageView
                            android:layout_marginHorizontal="10dp"
                            android:rotation="180"
                            android:padding="5dp"
                            android:id="@+id/next_button"
                            android:src="@drawable/prev_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>


