<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Exams.AddExam.ActivityAddNewExamination">

    <include layout="@layout/back_toolbar"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_intro"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/general_settings"
                        android:layout_width="wrap_content"
                        android:text="Exams"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:textSize="15sp"
                        android:paddingHorizontal="10dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/view"
                        android:background="@drawable/button_bg_sm"
                        android:layout_marginVertical="10dp"
                        android:layout_toEndOf="@+id/general_settings"
                        android:layout_width="1dp"
                        android:layout_height="30dp">

                    </View>
                    <ImageView
                        android:id="@+id/institute_profile_img"
                        android:padding="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toEndOf="@+id/view"
                        android:layout_centerVertical="true"
                        android:src="@drawable/institute_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp">

                    </ImageView>
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/institute_profile_img"
                        android:layout_width="wrap_content"
                        android:text="- Add New Examination "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:layout_height="wrap_content"/>



                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:id="@+id/card_select_info"
                android:layout_below="@+id/card_intro"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_fees_report"
                        android:layout_width="wrap_content"
                        android:text="Add New Examination"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans_extrabold"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="20dp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical"
                        android:layout_below="@+id/tv_fees_report"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!-- Select Class -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp">

                            <RelativeLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/edt_examination_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/edit_text_bg"
                                    android:fontFamily="@font/plus_jakarta_sans"
                                    android:hint="Enter Examination Name"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:paddingStart="10dp"
                                    android:paddingTop="12dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </RelativeLayout>

                            <TextView
                                android:elevation="5dp"
                                android:id="@+id/tv_examination"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Examination Name*"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:background="@drawable/edittext_bg"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="15dp"/>
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"> <!-- Increase padding to make room for floating label -->

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">
                                <!-- EditText Field -->
                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                    android:id="@+id/edt_start_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/edit_text_bg"
                                    android:drawableEnd="@drawable/calendar2"
                                    android:editable="false"
                                    android:fontFamily="@font/plus_jakarta_sans"
                                    android:hint="Enter Start Date"
                                    android:maxLength="11"
                                    android:maxLines="1"
                                    android:paddingStart="10dp"
                                    android:paddingTop="12dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </RelativeLayout>


                            <!-- Floating Hint Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:background="@drawable/edittext_bg"
                                android:elevation="5dp"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="2dp"
                                android:text="Start Date*"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"> <!-- Increase padding to make room for floating label -->

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">
                                <!-- EditText Field -->
                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                    android:id="@+id/edt_end_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/edit_text_bg"
                                    android:drawableEnd="@drawable/calendar2"
                                    android:editable="false"
                                    android:fontFamily="@font/plus_jakarta_sans"
                                    android:hint="Enter End Date"
                                    android:maxLength="11"
                                    android:maxLines="1"
                                    android:paddingStart="10dp"
                                    android:paddingTop="12dp"
                                    android:paddingEnd="10dp"
                                    android:paddingBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </RelativeLayout>


                            <!-- Floating Hint Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:background="@drawable/edittext_bg"
                                android:elevation="5dp"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="2dp"
                                android:text="End Date*"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:gravity="center"
                            android:layout_marginVertical="30dp"
                            android:background="@drawable/blue_bg"
                            android:id="@+id/btn_search"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="45dp">
                            <ImageView
                                android:padding="3dp"
                                android:id="@+id/add_btn_img"
                                android:src="@drawable/tick_circle"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/white">

                            </ImageView>
                            <TextView
                                android:gravity="center"
                                android:layout_alignBottom="@+id/add_btn_img"
                                android:layout_alignTop="@+id/add_btn_img"
                                android:paddingHorizontal="5dp"
                                android:text="Create"
                                android:layout_toEndOf="@+id/add_btn_img"
                                android:id="@+id/submit_txt"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <include
        layout="@layout/view_loader"
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>