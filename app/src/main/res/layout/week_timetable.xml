<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="2dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <com.school.schoolmanagement.GradientTextView
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Days Of the Week"
                    android:textSize="16sp"

                    android:fontFamily="@font/plus_jakarta_sans_extrabold" />

            </LinearLayout>

            <!-- Weekday Row -->
            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Repeatable item: use RecyclerView in real implementation -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:paddingVertical="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sun"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/plus_jakarta_sans" />

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="#000000"
                        android:background="@drawable/bg_day_unselected"
                        android:fontFamily="@font/plus_jakarta_sans" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:paddingVertical="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mon"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/plus_jakarta_sans" />

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="11"
                        android:textColor="#000000"
                        android:background="@drawable/bg_day_unselected"
                        android:fontFamily="@font/plus_jakarta_sans" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:paddingVertical="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tue"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/plus_jakarta_sans" />

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="#000000"
                        android:background="@drawable/bg_day_unselected"
                        android:fontFamily="@font/plus_jakarta_sans" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:paddingVertical="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wed"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/plus_jakarta_sans" />

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="13"
                        android:textColor="#000000"
                        android:background="@drawable/bg_day_unselected"
                        android:fontFamily="@font/plus_jakarta_sans" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:paddingVertical="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thu"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/plus_jakarta_sans" />

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="14"
                        android:textColor="#000000"
                        android:background="@drawable/bg_day_unselected"
                        android:fontFamily="@font/plus_jakarta_sans" />
                </LinearLayout>

                <!-- Repeat for M, T, W, T, F, S (example for Friday shown below as selected) -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:paddingVertical="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fri"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/plus_jakarta_sans" />

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="15"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_day_selected"
                        android:fontFamily="@font/plus_jakarta_sans" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:paddingVertical="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sat"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/plus_jakarta_sans" />

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="16"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_day_unselected"
                        android:fontFamily="@font/plus_jakarta_sans" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Title Row -->

</LinearLayout>
