<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/avatar_rel"
            android:background="@drawable/orange_avatar_bg_2"
            android:layout_width="90dp"
            android:layout_height="90dp">
            <RelativeLayout
                android:layout_centerInParent="true"
                android:background="@drawable/orange_avatar_bg"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/avatar2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/number_tv"
            android:paddingHorizontal="10dp"
            android:layout_below="@+id/avatar_rel"
            android:layout_width="wrap_content"
            android:text="78945632222"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/name_tv"
            android:paddingHorizontal="10dp"
            android:layout_below="@+id/number_tv"
            android:layout_width="wrap_content"
            android:text="Aman Meraj"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_extrabold"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
           android:layout_marginBottom="20dp"
            android:layout_below="@+id/name_tv"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/eye"
                android:src="@drawable/eye"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <ImageView
                android:id="@+id/edit_sm"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/edit_sm"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <ImageView
                android:id="@+id/delete_sm"
                android:src="@drawable/delete_sm"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="@color/dark_red" />
        </LinearLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>