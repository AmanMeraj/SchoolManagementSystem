<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginVertical="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"> <!-- Increase padding to make room for floating label -->

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- EditText Field -->
            <EditText
                android:maxLines="1"
                android:id="@+id/edt_subject_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/plus_jakarta_sans"
                android:textSize="14sp"
                android:hint="Name of Subject"
                android:inputType="text"/>
        </RelativeLayout>


        <!-- Floating Hint Label -->
        <TextView
            android:elevation="5dp"
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject Name*"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:layout_marginStart="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        > <!-- Increase padding to make room for floating label -->

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- EditText Field -->
            <EditText
                android:maxLines="1"
                android:id="@+id/edt_total_exam_marks"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/plus_jakarta_sans"
                android:textSize="14sp"
                android:hint="Total Exam Marks"
                android:inputType="number"/>
        </RelativeLayout>


        <!-- Floating Hint Label -->
        <TextView

            android:elevation="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marks*"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:layout_marginStart="25dp" />
    </RelativeLayout>

</LinearLayout>