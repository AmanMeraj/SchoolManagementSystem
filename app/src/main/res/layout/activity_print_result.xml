<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Exams.Result.ActivityPrintResult">

    <include
        android:id="@+id/toolbar"
        layout="@layout/back_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Exams Header with Icon -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_intro"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
                <!-- Existing header content -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- Existing content -->
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/general_settings"
                        android:layout_width="wrap_content"
                        android:text="Exams"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:textSize="15sp"
                        android:paddingHorizontal="10dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/view"
                        android:background="@drawable/button_bg_sm"
                        android:layout_marginVertical="10dp"
                        android:layout_toEndOf="@+id/general_settings"
                        android:layout_width="1dp"
                        android:layout_height="30dp">
                    </View>
                    <ImageView
                        android:id="@+id/institute_profile_img"
                        android:padding="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toEndOf="@+id/view"
                        android:layout_centerVertical="true"
                        android:src="@drawable/institute_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                    </ImageView>
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/institute_profile_img"
                        android:layout_width="wrap_content"
                        android:text="- Print Result Card "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <RelativeLayout
                android:layout_marginVertical="10dp"
                android:layout_below="@+id/card_intro"
                android:id="@+id/rel_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/blue_border_bg"
                    android:id="@+id/details_receipt_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_print"
                        android:padding="7dp"
                        android:src="@drawable/printer"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="@color/light_blue" />
                    <TextView
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@+id/img_print"
                        android:layout_centerVertical="true"
                        android:textColor="@color/light_blue"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:text="Print Result Card"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_below="@+id/rel_receipt"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                app:cardElevation="5dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="20dp"
                        android:gravity="center"
                        android:id="@+id/img_rel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/avatar_rel"
                            android:background="@drawable/orange_avatar_bg_2"
                            android:layout_width="90dp"
                            android:layout_height="90dp">
                            <RelativeLayout
                                android:layout_centerInParent="true"
                                android:background="@drawable/orange_avatar_bg"
                                android:layout_width="80dp"
                                android:layout_height="80dp">
                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/avatar2"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/name_tv"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/plus_jakarta_sans_extrabold"
                            android:layout_below="@+id/avatar_rel"
                            android:text="JOHN DOE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10dp"
                        android:layout_below="@+id/img_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!-- Registration/ID -->
                        <RelativeLayout
                            android:layout_marginVertical="10dp"
                            android:id="@+id/registration_id_rel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:paddingHorizontal="10dp"
                                android:id="@+id/registration"
                                android:text="Registration/ID"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/plus_jakarta_sans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_alignParentEnd="true"
                                android:paddingHorizontal="10dp"
                                android:id="@+id/tv_registration"
                                android:text="615384362"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                        </RelativeLayout>

                        <!-- Class -->
                        <RelativeLayout
                            android:layout_marginVertical="10dp"
                            android:id="@+id/class_rel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:paddingHorizontal="10dp"
                                android:id="@+id/classs"
                                android:text="Class"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/plus_jakarta_sans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_alignParentEnd="true"
                                android:paddingHorizontal="10dp"
                                android:id="@+id/tv_class"
                                android:text="Year 1"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                        </RelativeLayout>

                        <!-- Exam Counts -->
                        <RelativeLayout
                            android:layout_marginVertical="10dp"
                            android:id="@+id/exam_counts_rel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:paddingHorizontal="10dp"
                                android:id="@+id/exam_counts"
                                android:text="Exam Counts"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/plus_jakarta_sans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_alignParentEnd="true"
                                android:paddingHorizontal="10dp"
                                android:id="@+id/tv_exam_counts"
                                android:text="6"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                        </RelativeLayout>

                        <!-- Total Marks -->
                        <RelativeLayout
                            android:layout_marginVertical="10dp"
                            android:id="@+id/total_marks_rel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:paddingHorizontal="10dp"
                                android:id="@+id/total_marks"
                                android:text="Total Marks"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/plus_jakarta_sans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_alignParentEnd="true"
                                android:paddingHorizontal="10dp"
                                android:id="@+id/tv_total_marks"
                                android:text="10035"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                        </RelativeLayout>

                        <!-- Obtained Marks -->
                        <RelativeLayout
                            android:layout_marginVertical="10dp"
                            android:id="@+id/obtained_marks_rel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:paddingHorizontal="10dp"
                                android:id="@+id/obtained_marks"
                                android:text="Obtained Marks"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/plus_jakarta_sans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_alignParentEnd="true"
                                android:paddingHorizontal="10dp"
                                android:id="@+id/tv_obtained_marks"
                                android:text="845"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                        </RelativeLayout>

                        <!-- Percentage -->
                        <RelativeLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/percentage_rel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:paddingHorizontal="10dp"
                                android:id="@+id/percentage"
                                android:text="Percentage"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/plus_jakarta_sans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_alignParentEnd="true"
                                android:paddingHorizontal="10dp"
                                android:id="@+id/tv_percentage"
                                android:text="86%"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/plus_jakarta_sans_extrabold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>