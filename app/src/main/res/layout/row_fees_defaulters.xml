<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/avatar_rel"
            android:background="@drawable/orange_avatar_bg_2"
            android:layout_width="90dp"
            android:layout_height="90dp">
            <RelativeLayout
                android:layout_centerInParent="true"
                android:background="@drawable/orange_avatar_bg"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_centerInParent="true"
                    android:src="@drawable/avatar2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/number_tv"
            android:paddingHorizontal="10dp"
            android:layout_below="@+id/avatar_rel"
            android:layout_width="wrap_content"
            android:text="78945632222"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/name_tv"
            android:paddingHorizontal="10dp"
            android:layout_below="@+id/number_tv"
            android:layout_width="wrap_content"
            android:text="Aman Meraj"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/plus_jakarta_sans_extrabold"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_below="@+id/name_tv"
            android:layout_marginVertical="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/btn_submit"
                android:background="@drawable/ornage_blue_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="7dp"
                    android:src="@drawable/download_square"
                    android:id="@+id/download_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </ImageView>
                <TextView
                    android:layout_alignTop="@+id/download_img"
                    android:layout_alignBottom="@+id/download_img"
                    android:gravity="center"
                    android:text="Submit"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:layout_toEndOf="@+id/download_img"
                    android:paddingEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <ImageView
                android:src="@drawable/phone_sm"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/call_btn"
                android:layout_toEndOf="@+id/btn_submit"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </ImageView>
        </RelativeLayout>


    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>