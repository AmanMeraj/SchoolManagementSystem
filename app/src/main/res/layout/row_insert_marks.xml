<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginVertical="2dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_row"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:textSize="11sp"
                    android:id="@+id/tv_id_row"
                    android:textColor="@color/black"
                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="111222"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:textSize="11sp"
                    android:id="@+id/tv_s_name_row"
                    android:textColor="@color/black"
                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Sai Sudarshan"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:textSize="11sp"
                    android:id="@+id/tv_s_parent_row"
                    android:textColor="@color/black"
                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="john doe"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:id="@+id/rc_edt_marks"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <View
                android:layout_marginVertical="3dp"
                android:layout_marginHorizontal="5dp"
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </View>
        </LinearLayout>
</RelativeLayout>