<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom layer: gradient background for the border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:angle="180"
                android:startColor="#00BCD4"
                android:endColor="#FF5722"/>
        </shape>
    </item>

    <!-- Top layer: solid color inside with slightly smaller size -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="19dp"/>
            <solid android:color="#EAF7FE"/> <!-- Light background -->
        </shape>
    </item>
</layer-list>