<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SchoolManagement" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Theme.SchoolManagement" parent="Base.Theme.SchoolManagement" />

    <style name="Theme.SchoolManagement.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomCheckBoxStyle">
        <item name="android:colorAccent">@color/white</item>
    </style>

    <style name="Theme.SchoolManagement.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SchoolManagement.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GradientBorderTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">none</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="CustomHintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
    <style name="AttendanceHeader">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="AttendanceHeaderSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="AttendanceCell">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>


</resources>